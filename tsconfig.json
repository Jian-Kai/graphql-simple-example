{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist/",
        "target": "es2016",
        "module": "commonjs",
        "lib": [
            "es5",
            "es6",
            "dom",
            "esnext.asynciterable"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}